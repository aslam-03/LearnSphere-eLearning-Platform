rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isInstructor() {
      return isAuthenticated() && (getUserRole() == 'instructor' || getUserRole() == 'admin');
    }
    
    function isLearner() {
      return isAuthenticated() && getUserRole() == 'learner';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users Collection
    match /users/{userId} {
      // Anyone can read user profiles
      allow read: if isAuthenticated();
      
      // Users can only update their own profile
      allow update: if isOwner(userId);
      
      // Only auth system creates users (via Cloud Functions or client SDK)
      allow create: if isOwner(userId);
      
      // Users cannot delete their own profile
      allow delete: if false;
    }
    
    // Courses Collection
    match /courses/{courseId} {
      // Everyone can read published courses
      allow read: if resource.data.published == true || isInstructor() || isAdmin();
      
      // Only instructors and admins can create courses
      allow create: if isInstructor();
      
      // Only course creator or admin can update
      allow update: if isAdmin() || 
                      (isInstructor() && resource.data.createdBy == request.auth.uid);
      
      // Only admin or course creator can delete
      allow delete: if isAdmin() || 
                      (isInstructor() && resource.data.createdBy == request.auth.uid);
    }
    
    // Lessons Collection
    match /lessons/{lessonId} {
      // Learners can read lessons if course is published
      allow read: if isAuthenticated();
      
      // Only instructors can create lessons
      allow create: if isInstructor();
      
      // Only instructors can update/delete their own course lessons
      allow update, delete: if isInstructor();
    }
    
    // Quizzes Collection
    match /quizzes/{quizId} {
      // Learners can read quizzes
      allow read: if isAuthenticated();
      
      // Only instructors can create/update/delete quizzes
      allow create, update, delete: if isInstructor();
    }
    
    // Enrollments Collection
    match /enrollments/{enrollmentId} {
      // Users can read their own enrollments
      allow read: if isOwner(resource.data.userId) || isInstructor() || isAdmin();
      
      // Users can create enrollments for themselves
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      // Users can update their own enrollments
      allow update: if isOwner(resource.data.userId);
      
      // Cannot delete enrollments
      allow delete: if false;
    }
    
    // Lesson Progress Collection
    match /lessonProgress/{progressId} {
      // Users can read their own progress
      allow read: if isOwner(resource.data.userId) || isInstructor();
      
      // Users can create/update their own progress
      allow create, update: if isAuthenticated() && 
                              request.resource.data.userId == request.auth.uid;
      
      // Cannot delete progress
      allow delete: if false;
    }
    
    // Quiz Attempts Collection
    match /quizAttempts/{attemptId} {
      // Users can read their own attempts, instructors can read all
      allow read: if isOwner(resource.data.userId) || isInstructor();
      
      // Users can create their own attempts
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      // Cannot update or delete attempts
      allow update, delete: if false;
    }
    
    // Reviews Collection
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if isAuthenticated();
      
      // Users can create/update their own reviews
      allow create, update: if isAuthenticated() && 
                              request.resource.data.userId == request.auth.uid;
      
      // Users can delete their own reviews
      allow delete: if isOwner(resource.data.userId);
    }
  }
}
